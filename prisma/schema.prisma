generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model SiteContent {
  id         Int      @id @default(1)
  content    String
  contentEn  String
  updatedAt  DateTime @updatedAt
}

model Project {
  id            Int      @id @default(autoincrement())
  name          String
  nameEn        String
  description   String
  descriptionEn String
  link          String
  imageUrl      String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
